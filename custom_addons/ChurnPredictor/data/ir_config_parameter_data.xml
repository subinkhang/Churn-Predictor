<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!--
            Tham số hệ thống để lưu trữ API Endpoint của Google AI (Gemini).
            Admin có thể thay đổi giá trị này trong menu Technical -> Parameters -> System Parameters.
        -->
        <record id="google_ai_endpoint" model="ir.config_parameter">
            <field name="key">churn_predictor.google_ai_endpoint</field>
            <!-- Sửa lại giá trị ở đây -->
            <field name="value">https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash:generateContent</field>
        </record>

        <!--
            Tham số hệ thống để lưu trữ API Key.
            Quan trọng: Giá trị ở đây chỉ là placeholder.
            Bạn PHẢI vào Technical -> Parameters -> System Parameters để thay đổi 'abc123'
            thành API Key thật của bạn.
        -->
        <record id="google_ai_api_key" model="ir.config_parameter">
            <field name="key">churn_predictor.google_ai_api_key</field>
            <field name="value">abc123</field> <!-- <<< THAY THẾ BẰNG API KEY THẬT CỦA BẠN SAU KHI CÀI ĐẶT -->
        </record>

    </data>
</odoo>
