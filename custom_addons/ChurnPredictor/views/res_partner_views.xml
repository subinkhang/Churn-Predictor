<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_partner_churn_prediction_form_view_inherit" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.churn</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Phần buttons giữ nguyên -->
            <div name="button_box" position="inside">
                <button class="oe_stat_button" name="action_view_customer_dashboard" type="object" icon="fa-tachometer">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Churn</span>
                        <span class="o_stat_text">Dashboard</span>
                    </div>
                </button>
                <button class="oe_stat_button" name="action_view_churn_predictions" type="object" icon="fa-line-chart">
                    <field name="prediction_count" widget="statinfo" string="Predictions"/>
                </button>
            </div>
            <xpath expr="//sheet" position="before">
                <header>
                    <button name="action_predict_churn" string="Predict Churn" type="object" class="oe_highlight"/>
                </header>
            </xpath>

            <!-- Thêm tab mới -->
            <xpath expr="//notebook" position="inside">
                <page string="Churn Analysis" name="churn_analysis">
                    <group>
                        <group string="Churn Status">
                            <field name="x_churn_risk_level" widget="badge" decoration-danger="x_churn_risk_level == 'high'" decoration-warning="x_churn_risk_level == 'medium'" decoration-success="x_churn_risk_level == 'low'"/>
                        </group>
                        <group string="Imported Data Reference">
                            <field name="x_unique_id" readonly="1"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>