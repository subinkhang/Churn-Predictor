<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- 1. Định nghĩa Client Action -->
    <record id="action_churn_dashboard" model="ir.actions.client">
        <field name="name">Churn Dashboard</field>
        <!-- 'tag' này phải khớp 100% với tên đã đăng ký trong file JS -->
        <field name="tag">churn_dashboard_action_tag</field>
    </record>

    <!-- 2. Tạo Menu Item để gọi Action đó -->
    <menuitem 
        id="menu_churn_dashboard"
        name="Dashboard"
        parent="menu_churn_root"
        action="action_churn_dashboard"
        sequence="0"/>

</odoo>